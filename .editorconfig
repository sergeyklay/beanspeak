# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.{c,h,awk,bat,mk,Makefile,frag,zep,lemon,re,psm1,sh}]
tab_width = 4

[*.{php,phpt,m4,json,xml,w32,md,yml}]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
